<div>
  <h1>Projects</h1>

  <span class="hint">All of the projects listed on the site, click the project's name to edit it</span>

  <table class="sortable" data-update-url="<%= sort_admin_projects_url %>">
    <thead>
      <tr>
        <th class="move"></th>
        <th class="name">Name</th>
        <th class="quotes">Quotes</th>
        <th class="photos">Photos</th>
        <th class="videos">Videos</th>
        <th class="actions"></th>
      </tr>
    </thead>
  <% @projects.each do |project| %>
    <%= content_tag_for :tr, project do %>
      <td class="move"><%= image_tag "move.png" %></td>
      <td><%= link_to project, edit_admin_project_path(project) %></td>
      <td><%= project.quotes.size %></td>
      <td><%= project.photos.size %></td>
      <td><%= project.videos.size %></td>
      <td class="actions"><%= link_to "Delete", admin_project_path(project), method: :delete, confirm: "Are you sure?", class: 'delete' %></td>
    <% end %>
  <% end %>
  </table>
  <%= link_to 'New Project', new_admin_project_path, class: 'button' %>
</div>
