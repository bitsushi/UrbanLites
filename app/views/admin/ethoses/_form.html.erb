<%= form_for ['admin',@ethos] do |f| %>

  <%= render "application/error_messages", :target => @ethos %>

  <fieldset>
    <legend>Details</legend>
    <div class="field">
      <%= f.label :headline %>
      <%= f.text_field :headline %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %><br/>
      <%= image_tag(@ethos.image.url, width: 200) if @ethos.image.present? %>
    </div>
  </fieldset>

  <div>
    <%= f.submit %>
  </div>
<% end %>
