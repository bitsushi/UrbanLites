<div id="previous_project">
  <%= link_to("← #{@project.previous}", @project.previous) if @project.previous %>
  &nbsp;
</div>
<div id="next_project">
  &nbsp;
  <%= link_to("#{@project.next} →", @project.next) if @project.next %>
</div>

<script type="text/javascript" charset="utf-8">
  window.thumbs = <%= raw @project.photos.map{ |p| p.image.thumb.url }.to_json %>
</script>

<div id="my-slideshow">
  <%= link_to('Edit', edit_admin_project_path(@project)) if current_user.present? %>
  <h1 id="project_name"><%= @project.name %></h1>

  <ul class="bjqs">
  <% @project.photos.each do |photo| %>
    <li>
    <div id="window">
      <%= image_tag photo.image.window.url %>
    </div>
    </li>
  <% end %>

<% 3.times do %>
  <% @project.videos.each do |video| %>
    <li>
    <div id="window">
      <%= raw video_tag(video.uid) %>
    </div>
    </li>
  <% end %>
<% end %>
  </ul>
</div>

