<% title "Projects" %>
<h1>Projects</h1>

<div id="projects">

<% @projects.each_with_index do |project,index| %>
<div id="<%= dom_id project %>" class="project" data-url="<%= project_path(project) %>">
  <div class="inner">

    <% if project.thumbnail %>
      <div class="thumb" style="background-image: url(<%= project.thumbnail %>)"></div>
    <% end %>

    <div class="description">

      <h3 class="name"><%= link_to project.name, project %></h3>
      <span class="description"><%= truncate(project.description, :length => 120) %></span>
      <%= link_to "Read more...", project, class: 'read_more' %>
    </div>

  </div>
</div>
<% end %>
</div>

