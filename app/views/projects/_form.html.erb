<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :who %><br />
    <%= f.text_field :who %>
  </div>
  <div class="field">
    <%= f.label :where %><br />
    <%= f.text_field :where %>
  </div>
  <div class="field">
    <%= f.label :what %><br />
    <%= f.text_field :what %>
  </div>
  <div class="field">
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </div>
  <div class="field">
    <%= f.label :equipment_used %><br />
    <%= f.text_area :equipment_used %>
  </div>

  <fieldset id="videos" class="">
    <legend>Videos</legend>
    <%= label_tag :video_url %>
    <%= text_field_tag :video_url, nil, id: 'video_url', placeholder: 'http://www.youtube.com/watch?v=xCT-MB5wdj4' %>
    <%= button_tag "Add Video", id: 'add_video' %>
    <div class="hint">Paste in the youtube url</div>
    <ul id="video_list"></ul>
  </fieldset>

  <fieldset id="photos" class="">
    <legend>Photos</legend>
    <%= label_tag :add_photo %>
    <ul id="photo_list">
    <%= f.fields_for :photos do |p| %>
    <%= p.file_field :image %>
    <% end %>
    </ul>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
